{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "src",
        "tests",
        "tests/aliases.d.ts"
    ]
}